rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permettre la lecture publique des avis
    match /config/reviews {
      allow read: if true;
      allow write: if false; // Seulement via Functions
    }

    // Bloquer tout le reste par d√©faut
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
